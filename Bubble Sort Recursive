class Solution
{
    //Function to sort the array using bubble sort algorithm.
	public static void bubbleSort(int arr[], int n)
    {
        //There we will compare with the next element it will continue will the last element.
        
        if(n==1) {return;}
            
            //here the 2nd loop with continue until n-1-i
            for(int j=0;j<n-1;j++){
                if(arr[j]>arr[j+1]){
                    int temp=arr[j];
                    arr[j]=arr[j+1];
                    arr[j+1]=temp;
                }
            }
        bubbleSort(arr,n-1);
       
    }
    
    
}
